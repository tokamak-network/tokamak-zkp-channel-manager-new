{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types/*": ["./types/*"],
      "@/stores/*": ["./stores/*"],
      "@/stores": ["./stores"],
      "@tokamak/ui": ["./packages/ui/src"],
      "@tokamak/ui/*": ["./packages/ui/src/*"],
      "@tokamak/config": ["./packages/config/src"],
      "@tokamak/config/*": ["./packages/config/src/*"],
      "@tokamak/frost": ["./packages/frost/src"],
      "@tokamak/frost/*": ["./packages/frost/src/*"],
      "@/Tokamak-Zk-EVM/*": ["./Tokamak-Zk-EVM/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

